package com.in28minutes.oops;

public class starbucks {

	private int starbucks;
	
	starbucks(int sold) { //생성자를 만들기 위한 메서드
		if(sold < 0)
		this.starbucks = 0;
		
		else
		this.starbucks = sold;	
	}
	
	starbucks(){ // 생성자 기본값
		this(0);
	}
	
	
	public int getStarBucks() { // 값을 가져오기 위한 겟 함수
		return starbucks;
	}
	
	public void setStarBuck(int howToManySold) { //값 입력
		this.starbucks = howToManySold;
	}
	
	
	public void increace(int soldEd){ // 플러스
		this.starbucks = this.starbucks + soldEd;
	}
	
	public void decreace(int cancel) { // 마이너스
		this.starbucks = this.starbucks - cancel;
	}
	
	void start() {
		System.out.println("open Cafe");
	}
	
	
}
